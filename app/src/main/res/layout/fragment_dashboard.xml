<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="153dp"

        android:layout_marginBottom="10dp"
        android:background="@drawable/img_nosotros" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Nosotros"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#808181"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="Una exitosa trayectoria y muchos pacientes satisfechos avalan la calidad del servicio que ofrecemos en nuestro laboratorio de patología oncológica y general."
                android:layout_marginBottom="10dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Aval profesional"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#808181"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/nosotros_aval_profesional"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical|right"
                />


        </LinearLayout>
    </ScrollView>





</LinearLayout>